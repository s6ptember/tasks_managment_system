{
  "name": "task-management-system",
  "version": "1.0.0",
  "description": "Task Management System with Tailwind CSS, HTMX and Alpine.js",
  "scripts": {
    "build:css": "npx tailwindcss -i ./src/static/css/input.css -o ./src/static/css/output.css --minify",
    "watch:css": "npx tailwindcss -i ./src/static/css/input.css -o ./src/static/css/output.css --watch",
    "dev": "npx tailwindcss -i ./src/static/css/input.css -o ./src/static/css/output.css --watch",
    "copy:htmx": "mkdir -p ./src/static/js && cp node_modules/htmx.org/dist/htmx.min.js ./src/static/js/htmx.min.js",
    "copy:alpine": "mkdir -p ./src/static/js && cp node_modules/alpinejs/dist/cdn.min.js ./src/static/js/alpine.min.js",
    "build:js": "npm run copy:htmx && npm run copy:alpine",
    "build": "npm run build:css && npm run build:js",
    "postinstall": "npm run build:js"
  },
  "dependencies": {
    "alpinejs": "^3.15.1",
    "htmx.org": "^1.9.12"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.0"
  },
  "keywords": [
    "tailwind",
    "django",
    "css",
    "htmx",
    "alpinejs"
  ],
  "license": "MIT"
}
